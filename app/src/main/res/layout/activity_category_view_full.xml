<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoryViewFull">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/m1"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:id="@+id/logo"
            android:layout_gravity="center"
            android:backgroundTint="@color/black"
            android:background="@mipmap/l1" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="70dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4500 APPAREL"
            android:textSize="20dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:backgroundTint="#E6E4E4"
            android:text="New"
            android:textColor="@color/black" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/listimg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:src="@mipmap/catefullview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:src="@mipmap/morefeed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Women"
        android:layout_marginStart="15dp"
        android:textColor="@color/black"
        android:id="@+id/btn"
        style="@style/Widget.Material3.Button.OutlinedButton"
        app:layout_constraintTop_toBottomOf="@id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="#ECEBEB"
        android:drawableEnd="@mipmap/close" />

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:backgroundTint="#ECEBEB"
        android:drawableEnd="@mipmap/close"
        android:text="All apparel"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout" />

    <ScrollView
        android:layout_width="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/btn"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/tshirt1"
                    android:layout_width="350dp"
                    android:layout_height="450dp"
                    android:layout_marginStart="10dp"
                    android:src="@mipmap/dressimg1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/unlike1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="324dp"
                    android:layout_marginBottom="52dp"
                    android:src="@mipmap/unfillheart"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"

                    android:text="M O H A N"
                    android:textSize="18dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tshirt1" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="Recycle Boucle Knit Cardigan Pink"
                    android:textSize="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="312dp"
                    android:layout_marginTop="464dp"
                    android:text="$120"
                    android:textColor="#DD8560"
                    android:textSize="18dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/tshirt2"
                    android:layout_width="350dp"
                    android:layout_height="450dp"
                    android:layout_marginStart="10dp"
                    android:src="@mipmap/dressimg2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/unlike2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="324dp"
                    android:layout_marginBottom="52dp"
                    android:src="@mipmap/unfillheart"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"

                    android:layout_marginStart="20dp"
                    android:text="M O H A N"
                    android:textSize="18dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tshirt2" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="20dp"
                    android:text="Recycle Boucle Knit Cardigan Pink"
                    android:textSize="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="312dp"
                    android:layout_marginTop="464dp"
                    android:text="$120"
                    android:textColor="#DD8560"
                    android:textSize="18dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/tshirt3"
                    android:layout_width="350dp"
                    android:layout_height="450dp"
                    android:layout_marginStart="10dp"
                    android:src="@mipmap/dressimg3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/unlike3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="324dp"
                    android:layout_marginBottom="52dp"
                    android:src="@mipmap/unfillheart"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/textView41"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="20dp"

                    android:text="M O H A N"
                    android:textSize="18dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tshirt3" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="20dp"
                    android:text="Recycle Boucle Knit Cardigan Pink"
                    android:textSize="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView41" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="312dp"
                    android:layout_marginTop="464dp"
                    android:text="$120"
                    android:textColor="#DD8560"
                    android:textSize="18dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="30dp"
                    android:textSize="18dp"
                    android:layout_height="30dp"
                    android:fontFamily="monospace"
                    android:id="@+id/one"
                    android:text="1"
                    android:background="@drawable/pagebtn" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/two"
                    android:layout_marginStart="13dp"
                    android:background="@drawable/pagebtn"
                    android:fontFamily="monospace"
                    android:text="2"
                    android:textSize="18dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="30dp"
                    android:textSize="18dp"
                    android:id="@+id/three"
                    android:fontFamily="monospace"
                    android:layout_height="30dp"
                    android:layout_marginStart="13dp"
                    android:text="3"
                    android:background="@drawable/pagebtn" />
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="30dp"
                    android:textSize="18dp"
                    android:id="@+id/four"
                    android:layout_height="30dp"
                    android:fontFamily="monospace"
                    android:layout_marginStart="13dp"
                    android:text="4"
                    android:background="@drawable/pagebtn" />
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="30dp"
                    android:fontFamily="monospace"
                    android:id="@+id/five"
                    android:textSize="18dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="13dp"
                    android:text="5"
                    android:background="@drawable/pagebtn" />
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="30dp"
                    android:textSize="18dp"
                    android:id="@+id/siix"
                    android:fontFamily="monospace"
                    android:layout_height="30dp"
                    android:layout_marginStart="13dp"
                    android:text="6"
                    android:background="@drawable/pagebtn" />
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="30dp"
                    android:textSize="18dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="13dp"
                    android:src="@mipmap/rightarrow"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:orientation="horizontal">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/twitter" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="50dp"
                    android:src="@mipmap/instagram" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="50dp"
                    android:src="@mipmap/youtube" />
            </LinearLayout>

            <View
                android:layout_width="140dp"
                android:layout_height="10dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="@mipmap/view"
                android:backgroundTint="#555555" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:letterSpacing="0.100"
                android:lineSpacingExtra="10dp"
                android:text="support@openui.design \n        +60 825 876 \n08:00 - 22:00 - Everyday"
                android:textSize="18dp" />

            <View
                android:layout_width="140dp"
                android:layout_height="10dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="@mipmap/view"
                android:backgroundTint="#555555" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <Button
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/white"
                    android:text="About"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <Button
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:text="Contact"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <Button
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:text="Blog"
                    android:textColor="@color/black"
                    android:textSize="18dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="150dp"
                android:background="#D6D6D6"
                android:gravity="center"
                android:text="Copyright© OpenUI All Rights Reserved."
                android:textColor="@color/black" />
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>