<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/_15sdp"
    tools:context=".product1">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imageProfile"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:src="@drawable/a"
        app:riv_border_color="@color/black"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="@dimen/_8sdp"
        tools:ignore="MissingConstraints" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imageSignOut"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="72dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_89"
        android:tint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/cart"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:src="@drawable/img_90"
        android:scaleType="centerCrop"
        android:onClick="next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:tint="@color/white"
        tools:ignore="MissingConstraints" />
    <ImageView
        android:layout_width="111dp"
        android:layout_height="50dp"
        android:src="@drawable/l"
        app:layout_constraintEnd_toStartOf="@+id/imageSignOut"
        app:layout_constraintHorizontal_bias="0.58"
        app:layout_constraintStart_toEndOf="@+id/imageProfile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.263"
        tools:ignore="MissingConstraints" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_16sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageProfile"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/firstImage"
                android:layout_width="382dp"
                android:layout_height="522dp"
                android:layout_margin="20dp"
                android:layout_marginTop="52dp"
                android:src="@drawable/img_42"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="11dp" />

            <LinearLayout
                android:id="@+id/labeled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/firstImage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">


                <ImageView
                    android:id="@+id/secondImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_43" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:text="Color"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/black"
                        android:layout_width="17dp"
                        android:layout_height="19dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_44"
                        android:tint="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.035"
                        app:layout_constraintStart_toEndOf="@+id/textView3"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.333"
                        tools:ignore="MissingConstraints" />


                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/pink"
                        android:layout_width="17dp"
                        android:layout_height="19dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_45"
                        android:tint="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.118"
                        app:layout_constraintStart_toEndOf="@+id/textView3"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.375"
                        tools:ignore="MissingConstraints" />


                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/red"
                        android:layout_width="17dp"
                        android:layout_height="19dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_46"
                        android:tint="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.205"
                        app:layout_constraintStart_toEndOf="@+id/textView3"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.375"
                        tools:ignore="MissingConstraints" />


                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:text="Size"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.254"
                        app:layout_constraintStart_toEndOf="@+id/red"
                        tools:layout_editor_absoluteY="0dp" />

                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="S"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.123"
                        app:layout_constraintStart_toEndOf="@+id/textView4"
                        tools:layout_editor_absoluteY="0dp" />

                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="M"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.404"
                        app:layout_constraintStart_toEndOf="@+id/textView4"
                        tools:layout_editor_absoluteY="0dp" />


                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="L"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.685"
                        app:layout_constraintStart_toEndOf="@+id/textView4"
                        tools:layout_editor_absoluteY="0dp" />



                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>

           <LinearLayout
               android:id="@+id/new1"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toBottomOf="@id/labeled"
               android:orientation="vertical">

               <ImageView
                   android:id="@+id/addbasket"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:src="@drawable/img_47"
                   android:onClick="addbasket"
                   android:layout_margin="@dimen/_10sdp"
                   />


           </LinearLayout>

            <ImageView
                android:id="@+id/details"
                android:layout_width="539dp"
                android:layout_height="544dp"
                android:layout_margin="@dimen/_15sdp"
                android:src="@drawable/img_48"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/new1" />

            <LinearLayout
                android:id="@+id/p2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/_15sdp"
                app:layout_constraintTop_toBottomOf="@id/details"
                >

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/roundedImageView1"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/img_49"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.081"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/details"
                    app:layout_constraintVertical_bias="0.143" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/menu"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:hint="Free Flat Rate Shipping"
                android:textColorHint="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/roundedImageView1"
                app:layout_constraintTop_toBottomOf="@id/details"
                tools:ignore="MissingConstraints">

                <AutoCompleteTextView
                    android:id="@+id/autoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:inputType="none" />
            </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/p3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/_15sdp"
                app:layout_constraintTop_toBottomOf="@id/p2"
                >

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/roundedImageView2"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/img_50"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.081"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/details"
                    app:layout_constraintVertical_bias="0.143" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/menu1"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:hint="COD Policy"
                    android:textColorHint="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/roundedImageView1"
                    app:layout_constraintTop_toBottomOf="@id/details"
                    tools:ignore="MissingConstraints">

                    <AutoCompleteTextView
                        android:id="@+id/autoCompleteTextView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:inputType="none" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/p4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/_15sdp"
                app:layout_constraintTop_toBottomOf="@id/p3"
                >

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/roundedImageView3"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/img_51"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.081"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/details"
                    app:layout_constraintVertical_bias="0.143" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/menu2"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:hint="Return Policy"
                    android:textColorHint="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/roundedImageView1"
                    app:layout_constraintTop_toBottomOf="@id/details"
                    tools:ignore="MissingConstraints">

                    <AutoCompleteTextView
                        android:id="@+id/autoCompleteTextView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:inputType="none" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/p5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@id/p4"
                android:paddingTop="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="300dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img_2" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="300dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img_3" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/p6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/p5"
                android:paddingTop="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="300dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/image3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img_4" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="300dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/image4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img_5" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/p7"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_margin="@dimen/_15sdp"
                app:layout_constraintTop_toBottomOf="@id/p6"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="8dp"
                    android:src="@drawable/img_14" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="8dp"
                    android:src="@drawable/img_15" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="8dp"
                    android:src="@drawable/img_16" />


            </LinearLayout>

            <ImageView
                android:id="@+id/p8"
                android:layout_width="match_parent"
                android:layout_height="101dp"
                app:layout_constraintTop_toBottomOf="@id/p7"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/img_17" />
            <LinearLayout
                android:id="@+id/p9"
                app:layout_constraintTop_toBottomOf="@id/p8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_20sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_view_about"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="About"
                    android:gravity="center"
                    android:padding="8dp"
                    />

                <TextView
                    android:id="@+id/text_view_contact"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Contact"
                    android:gravity="center"
                    android:padding="8dp"
                    />

                <TextView
                    android:id="@+id/text_view_blog"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Blog"
                    android:gravity="center"
                    android:padding="8dp"
                    />




            </LinearLayout>

            <TextView
                app:layout_constraintTop_toBottomOf="@+id/p9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Copyright© OpenUI All Rights Reserved."
                android:gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>