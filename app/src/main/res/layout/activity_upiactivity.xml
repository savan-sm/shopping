<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UPIactivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/m1"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:id="@+id/logo"
            android:layout_gravity="center"
            android:backgroundTint="@color/black"
            android:background="@mipmap/l1" />
    </androidx.appcompat.widget.Toolbar>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <TextView
            android:id="@+id/bhim"
            android:layout_width="330dp"
            android:layout_height="55dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="20dp"
            android:background="#F8F4F4"
            android:drawableStart="@mipmap/bhim"
            android:gravity="center_vertical"
            android:padding="15dp"
            android:text="    BHIM UPI"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <EditText
            android:id="@+id/editupi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ENTER BHIM UPI"
            android:textSize="16sp"
            android:background="#F8F4F4"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="50dp"
            android:padding="15dp"
            android:theme="@style/ThemeOverlay.Material3.TextInputEditText.FilledBox"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bhim"
            />
        <TextView
            android:id="@+id/pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pay"
            android:letterSpacing="0.02"
            android:textColor="#2A61E7"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="60dp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@id/bhim"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/con1">
        <TextView
            android:id="@+id/gpay"
            android:layout_width="330dp"
            android:layout_height="55dp"
            android:text="    Google Pay"
            android:background="#F8F4F4"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:drawableStart="@mipmap/googlepay"
            android:layout_marginVertical="20dp"
            android:textStyle="bold"
            android:layout_marginHorizontal="40dp"
            android:padding="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/con2">
        <TextView
            android:id="@+id/ppay"
            android:layout_width="330dp"
            android:layout_height="55dp"
            android:background="#F8F4F4"
            android:text="    Phone Pay"
            android:gravity="center_vertical"
            android:layout_marginVertical="20dp"
            android:textSize="20sp"
            android:drawableStart="@mipmap/phonepe"
            android:textStyle="bold"
            android:layout_marginHorizontal="40dp"
            android:padding="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/con3">
        <TextView
            android:id="@+id/ptm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="20dp"
            android:background="#F8F4F4"
            android:gravity="center_vertical"
            android:drawableStart="@mipmap/paytm"
            android:padding="15dp"
            android:text="    Paytm"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Place Order"
        android:textAllCaps="true"
        android:background="@color/black"
        android:layout_marginStart="@dimen/cardview_default_radius"
        android:letterSpacing="0.15"
        android:gravity="center"
        android:textColor="@color/white"
        android:id="@+id/placeorderpayment"
        android:textSize="18sp"
        android:padding="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="14dp"
        android:src="@mipmap/bagwhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>