<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCard">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/m1"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:id="@+id/logo"
            android:layout_gravity="center"
            android:backgroundTint="@color/black"
            android:background="@mipmap/l1" />
    </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/shapeableImageView"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:src="@mipmap/paymentmethod"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent" />
    <View
        android:id="@+id/view"
        android:layout_width="200dp"
        android:layout_height="10dp"
        android:layout_gravity="center"
        android:layout_marginStart="104dp"
        android:layout_marginTop="120dp"
        android:background="@mipmap/view"
        android:backgroundTint="#555555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/payment"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="32dp"
        android:src="@mipmap/mastercard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/cardnm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Irin Watson"
        android:layout_marginTop="300dp"
        android:layout_marginStart="40dp"
        android:textSize="18dp"
        android:letterSpacing="0.1"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/cardnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2365 3654 2365 3698"
        android:layout_marginStart="40dp"
        android:textSize="18dp"
        android:letterSpacing="0.1"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardnm"/>
    <TextView
        android:id="@+id/exp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="03/25"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="40dp"
        android:textSize="18dp"
        android:letterSpacing="0.1"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="390dp"
        android:layout_marginStart="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="10sp"
            android:layout_height="10sp"
            android:src="@mipmap/blankract"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="10sp"
            android:layout_height="10sp"
            android:src="@mipmap/filledrect"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="10sp"
            android:layout_height="10sp"
            android:src="@mipmap/blankract"/>
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name Of Card"
        android:id="@+id/nofc"
        android:inputType="textPersonName"
        android:paddingBottom="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear1" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Card Number"
        android:id="@+id/cardnum"
        android:maxLength="12"
        android:paddingBottom="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nofc" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linear"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardnum">
        <EditText
            android:id="@+id/expmonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLength="2"
            android:paddingBottom="25dp"
            android:hint="Exp Month" />
        <EditText
            android:id="@+id/expyear"
            android:layout_width="wrap_content"
            android:maxLength="2"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:paddingBottom="25dp"
            android:hint="Exp Year"
            android:layout_weight="1" />
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CVV"
        android:id="@+id/cvv"
        android:paddingBottom="25dp"
        android:maxLength="3"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD CARD"
        android:textAllCaps="true"
        android:background="@color/black"
        android:letterSpacing="0.15"
        android:gravity="center"
        android:textColor="@color/white"
        android:id="@+id/addnow"
        android:textSize="18dp"
        android:padding="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>